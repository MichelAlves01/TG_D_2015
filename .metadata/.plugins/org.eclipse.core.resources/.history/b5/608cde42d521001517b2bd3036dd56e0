<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
 <mapper namespace="delivery.api.dao.UserDAO">
 	
 	<insert id="cadastrarUsuarioDAO" parameterType="delivery.model.User">
 			insert into User (
 								username, 
 								password, 
 								cnpj_cpf) 
 						values (
 								#{username} , 
 								#{password}, 
 								#{empresa.cpfCnpj})
 	</insert>
 	
 	<update id="atualizarUserDAO" parameterType="delivery.model.User">
 		update User set 
 			username = #{username},
 			password = #{password},
 			cpf_cnpj = #{empresa.cpfCnpj},
 			status = 0 
 	</update>
 	
 	<update id="excluirUserDAO" parameterType="java.lang.String">
 		update User set status = 1
 	</update>
 	
 	<select id="getUserDAO" parameterType="java.lang.String">
 		select username, 
 				password, 
 				cpf_cnpj as cpfCnpj, 
 				status
 		where
 				username = #{username} 
 	</select>
 	
 </mapper>